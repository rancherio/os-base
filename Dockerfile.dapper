FROM ubuntu:16.04

RUN apt-get update && \
    apt-get install -y build-essential wget libncurses5-dev unzip bc curl python rsync ccache vim less cpio texinfo

RUN locale-gen en_US.UTF-8
ENV LANG en_US.UTF-8

ENV DAPPER_SOURCE /source
ENV DAPPER_OUTPUT ./dist
ENV DAPPER_ENV ARCH
ENV SHELL /bin/bash
ENV ARTIFACTS /usr/src
WORKDIR ${DAPPER_SOURCE}

RUN cd ${ARTIFACTS} && \
    wget https://github.com/rancher/buildroot/archive/buildroot-2016.08.1-1.tar.gz

ENTRYPOINT ["./scripts/entry"]
CMD ["ci"]
